<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#222227"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175px"
        android:background="#2f2f35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@drawable/ic_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="@string/txt_change_pwd"
            android:textColor="#ffffff"
            android:textSize="55px"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#25262c"
        android:gravity="center_vertical"
        android:paddingLeft="40px"
        android:text="@string/txt_send_hint"
        android:textColor="#818182"
        android:textSize="34px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="58px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="#343339"/>

    <LinearLayout
        android:id="@+id/ll_login_code"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="20px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/txt_input_code"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/txt_login_hint"
            android:textSize="48px"/>

        <Button
            android:id="@+id/btn_code"
            android:layout_width="288px"
            android:layout_height="146px"
            android:background="@drawable/shape_code_button"
            android:text="@string/txt_get_code"
            android:textColor="@color/txt_account_hint"
            android:textSize="40px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:background="#343339"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46px"
            android:layout_marginTop="20px"
            android:text="收不到短信? 请在"
            android:textColor="@color/txt_account_hint"
            android:textSize="32px"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/tv1"
            android:text="60s"
            android:textColor="@color/btn_bg_color"
            android:textSize="32px"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/tv2"
            android:text="后重试"
            android:textColor="@color/txt_account_hint"
            android:textSize="32px"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="154px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="25px"
        android:background="@color/btn_bg_color"
        android:text="@string/txt_change_pwd"
        android:textColor="@color/white"
        android:textSize="60px"/>


</LinearLayout>