<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/bg_date">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2018-06-26 星期三"
                android:textColor="#838384"
                android:textSize="40px"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:text="10:00"
                    android:textColor="#7f7f81"
                    android:textSize="48px"/>

                <TextView
                    android:id="@+id/time_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/start_time"
                    android:text=" - "
                    android:textColor="#7f7f81"
                    android:textSize="48px"/>

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/time_point"
                    android:text="10:15"
                    android:textColor="#7f7f81"
                    android:textSize="48px"/>

                <TextView
                    android:id="@+id/start_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/start_time"
                    android:layout_marginLeft="70px"
                    android:layout_marginTop="21px"
                    android:text="起"
                    android:textColor="#00d2ff"
                    android:textSize="48px"/>

                <TextView
                    android:id="@+id/start_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/start_time"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="32px"
                    android:layout_toRightOf="@id/start_point"
                    android:text="徐汇区田林路宜山路"
                    android:textColor="#808082"
                    android:textSize="36px"/>

                <TextView
                    android:id="@+id/end_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/start_point"
                    android:layout_marginLeft="70px"
                    android:layout_marginTop="29px"
                    android:text="终"
                    android:textColor="#fd0012"
                    android:textSize="48px"/>

                <TextView
                    android:id="@+id/end_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/start_address"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="40px"
                    android:layout_toRightOf="@id/start_point"
                    android:text="徐汇区八万人体育馆"
                    android:textColor="#808082"
                    android:textSize="36px"/>

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="44px"
                    android:layout_marginTop="105px"
                    android:src="@drawable/ic_nextpage"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mileage"
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="166px"
                    android:src="@drawable/bg_mileage"/>

                <TextView
                    android:id="@+id/single_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/mileage"
                    android:text="3km"
                    android:textColor="#808082"/>

                <ImageView
                    android:id="@+id/time"
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="225px"
                    android:layout_toRightOf="@id/mileage"
                    android:src="@drawable/bg_time"/>

                <TextView
                    android:id="@+id/single_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/time"
                    android:text="00:00:15"
                    android:textColor="#808082"/>

                <ImageView
                    android:id="@+id/speed"
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="225px"
                    android:layout_toRightOf="@id/time"
                    android:src="@drawable/bg_speed"/>

                <TextView
                    android:id="@+id/average_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/speed"
                    android:text="25km/h"
                    android:textColor="#808082"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
